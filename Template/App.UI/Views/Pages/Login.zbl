<?xml version="1.0"?>
<z-Component z-type="Login"
			 z-base="Page"
			 z-namespace="UI.Pages"
			 z-viewmodel="ViewModel.LoginPage"
			 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
			 xsi:noNamespaceSchemaLocation="../.zebble-schema.xml"
			 CssClass="primary-bg">
	<FillParent CssClass="m-big">
		<ImageView Path="Images/Logo.png" CssClass="parent-center m-b-big logo" />
		<TextView Text="Login to your account" CssClass="title" />
		<Column CssClass="m-t-big">
			<Column Ignored="@{Model.IsBusy, x => !x}">
				<Spinner Image.Path="Images/Spinner-Primary.png" CssClass="small" />
			</Column>
			<Stack CssClass="m-b-normal input-wrapper">
				<TextInput Text="@{Model.Email}" Placeholder="Email" KeyboardActionType="Next" Enabled="false" TextMode="Email" />
			</Stack>
			<Stack CssClass="m-b-normal input-wrapper">
				<TextInput Text="@{Model.Password}" Placeholder="Password" KeyboardActionType="Done" TextMode="Password" />
			</Stack>
			<Button Text="Login" on-Tapped="@{Model.TapLogin()}" CssClass="lg primary" />
			<TextView CssClass="separator" />
			<ActionButton Primary.Text="Don't have an account?" Secondary.Text="Register here with ease." on-Tapped="@{Model.TapRegister()}" />
		</Column>
	</FillParent>
</z-Component>